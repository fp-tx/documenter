{
  "compilerOptions": {
    "noEmit": true,
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "allowImportingTsExtensions": false,
    "skipLibCheck": false,
    "types": ["node", "jest"]
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
